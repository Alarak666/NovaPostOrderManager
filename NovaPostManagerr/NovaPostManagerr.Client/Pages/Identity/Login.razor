@page "/login"

<h3>Авторизация</h3>

<EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="login">Логин</label>
        <InputText id="login" class="form-control" @bind-Value="@loginModel.Username" />
    </div>

    <div class="form-group">
        <label for="password">Пароль</label>
        <InputText id="password" class="form-control" type="password" @bind-Value="@loginModel.Password" />
    </div>

    <div class="form-group">
        <label for="language">Мова</label>
        <InputSelect id="language" class="form-control" @bind-Value="@loginModel.Language">
            <option value="UA">Українська</option>
            <!-- Добавьте другие языки по необходимости -->
        </InputSelect>
    </div>

    <div class="form-group">
        <label for="domain">Домен</label>
        <InputText id="domain" class="form-control" @bind-Value="@loginModel.Domain" />
    </div>

    <button type="submit" class="btn btn-primary">Авторизуватися</button>
</EditForm>

